<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>

<HBox fx:controller="com.catnbear.gui.BoardWindowController"
      xmlns:fx="http://javafx.com/fxml">
    <VBox fx:id="boardPane"
          style="-fx-border-color: #DEB887; -fx-border-width: 3; -fx-border-style: solid;">
        <GridPane fx:id="boardGrid"/>
    </VBox>
    <VBox style="-fx-background-color: #c5925e;">
        <Button text="End turn" onAction="#endTurnButtonCallback"/>
        <Button text="Reset turn" onAction="#resetTurnButtonCallback"/>
        <HBox>
            <Label text="Active player: "/>
            <Label fx:id="activePlayerLabel"/>
        </HBox>
        <HBox>
            <Label text="Round: "/>
            <Label fx:id="roundLabel"/>
        </HBox>
    </VBox>
</HBox>