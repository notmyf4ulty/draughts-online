<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<VBox fx:controller="com.catnbear.gui.BoardWindowController"
      xmlns:fx="http://javafx.com/fxml">
    <VBox fx:id="boardPane">
        <GridPane fx:id="boardGrid"/>
    </VBox>
    <HBox>
        <Button text="End turn" onAction="#endTurnButtonCallback"/>
        <Button text="Reset turn" onAction="#resetTurnButtonCallback"/>
        <Label text="Active player: "/>
        <Label fx:id="activePlayerLabel"/>
        <Label text="Round: "/>
        <Label fx:id="roundLabel"/>
    </HBox>
</VBox>